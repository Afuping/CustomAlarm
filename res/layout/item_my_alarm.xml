<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <TextView
        android:id="@+id/alarmClock"
        android:layout_width="@dimen/my_alarm_splitter_height"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/default_alarm_time"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/alarmClock"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/editAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/default_alarm_tag" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/editAlarm"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/alarmtag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_alarm_tag"
                android:visibility="visible" />

            <TextView
                android:id="@+id/alarmtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_alarm_time"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>