<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/grid_item_dim"
    android:layout_height="@dimen/grid_item_dim"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/grid_item_pic_dim"
        android:layout_height="@dimen/grid_item_pic_dim" />

    <TextView
        android:id="@+id/tag"
        android:layout_width="@dimen/grid_item_txt_dim"
        android:layout_height="@dimen/grid_item_txt_dim" />

</LinearLayout>